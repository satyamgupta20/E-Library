<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/drawerlayout"
    android:fitsSystemWindows="true">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F7F9F9"
        android:gravity="center_horizontal"
        tools:context=".ProfileActivity">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF6487"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        </android.support.v7.widget.Toolbar>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="127dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/background2"/>
        <TextView
            android:id="@+id/textViewUserEmail"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="#1ABC9C"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="GLA University / Course"
            android:fontFamily="casual"/>
        <Button
            android:id="@+id/button1"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:text="Graduate Programs"
            android:layout_marginTop="30dp"
            android:textColor="#ffffff"
            android:background="@drawable/button_rounded3"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="casual"/>
        <Button
            android:id="@+id/button2"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:text="Post Graduate Programs"
            android:layout_margin="20dp"
            android:textColor="#ffffff"
            android:onClick="btnaction"
            android:background="@drawable/button_rounded2"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="casual"/>
        <Button
            android:id="@+id/button3"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:text="Doctorate Programs"
            android:textColor="#ffffff"
            android:background="@drawable/button_rounded3"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="casual"/>
        <Button
            android:id="@+id/button4"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:text="Diploma Programs"
            android:textColor="#ffffff"
            android:layout_margin="20dp"
            android:background="@drawable/button_rounded3"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="casual"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="240dp"
        android:layout_gravity = "start"
        android:background="#ffffff"
        android:padding="30dp"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/background2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:textColor="#FEA895"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="That's the thing about books.They let you travel without moving your feet."
            android:fontFamily="casual"/>


        <Button
            android:id="@+id/magicalWords"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="220dp"
            android:background="@drawable/button_rounded3"
            android:textSize="15dp"
            android:text="Magical words"
            android:fontFamily="casual"/>

        <Button
            android:id="@+id/buttonLogout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_rounded"
            android:textSize="15dp"
            android:text="Logout"
            android:fontFamily="casual"/>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>